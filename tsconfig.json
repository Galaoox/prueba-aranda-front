{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@assets/*": [
                "./src/assets/*"
            ],
            "@models/*": [
                "./src/models/*"
            ],
            "@pages/*": [
                "./src/pages/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@utilities/*": [
                "./src/utilities/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@styled-components/*": [
                "./src/styled-components/*"
            ],
            "@hooks/*": [
                "./src/hooks/*"
            ],
        },
    },
    "include": [
        "src"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}